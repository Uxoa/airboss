<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Flights - Calendar</title>
    <link rel="stylesheet" href="/css/styles.css">
    <!-- Flatpickr CSS -->
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/airbnb.css" rel="stylesheet">
</head>
<body>
<header>
    <a href="/" class="logo-link">
        <div class="logo-img">
            <img src="/images/logo01.png" alt="AirBoss Logo">
        </div>
        <span class="logo-text">AirBoss</span>
    </a>
    <nav>
        <a href="/dashboard" class="nav-link">Dashboard</a>
        <a href="/perfil" class="nav-link">My Profile</a>
        <a href="/logout" class="nav-link">Logout</a>
    </nav>
</header>

<main class="search-container">
    <h1>Search Flights</h1>

    <!-- Formulario de b√∫squeda -->
    <form id="searchForm">
        <!-- Origen -->
        <div class="form-group">
            <label for="from">From:</label>
            <select id="from" name="from" required>
                <option value="" disabled selected>Select your origin</option>
            </select>
        </div>

        <!-- Destino -->
        <div class="form-group">
            <label for="to">To:</label>
            <select id="to" name="to" required>
                <option value="" disabled selected>Select your destination</option>
            </select>
        </div>

        <!-- Fecha de salida -->
        <div class="form-group">
            <label for="calendar">Select Date:</label>
            <input id="calendar" type="text" name="date" placeholder="Pick a date" required>
        </div>

        <!-- Bot√≥n para buscar vuelos -->
        <button type="button" onclick="searchFlights()" class="btn btn-primary">Search Flights</button>
    </form>

    <!-- Contenedor de resultados -->
    <div id="results" class="results-container"></div>
</main>

<footer>
    <p>&copy; 2025 AirBoss. All rights reserved.</p>
</footer>

<!-- Flatpickr JS -->
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/es.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        // ‚úÖ Configurar Flatpickr con fecha m√≠nima hoy
        flatpickr("#calendar", {
            altInput: true,
            altFormat: "F j, Y",
            dateFormat: "Y-m-d",
            locale: "es",
            minDate: "today" // üìå Evita seleccionar fechas anteriores a hoy
        });

        // ‚úÖ Cargar aeropuertos
        fetch('/api/airports/allAirports')
                .then(response => response.json())
                .then(airports => {
                    const fromDropdown = document.getElementById('from');
                    const toDropdown = document.getElementById('to');
                    airports.forEach(airport => {
                        const option = `<option value="${airport.iataCode}">${airport.name}</option>`;
                        fromDropdown.insertAdjacentHTML('beforeend', option);
                        toDropdown.insertAdjacentHTML('beforeend', option);
                    });
                })
                .catch(error => console.error('‚ùå Error loading airports:', error));

        // ‚úÖ Cargar fechas disponibles
        fetch('/api/flights/available-dates')
                .then(response => response.json())
                .then(flightDates => {
                    flatpickr("#calendar", {
                        enable: flightDates,
                        dateFormat: "Y-m-d",
                        minDate: "today"
                    });
                })
                .catch(error => console.error('‚ùå Error loading dates:', error));
    });

    async function searchFlights() {
        const origin = document.getElementById('from').value;
        const destination = document.getElementById('to').value;
        const date = document.getElementById('calendar').value;

        if (!origin || !destination || !date) {
            alert('‚ö†Ô∏è Please fill in all fields.');
            return;
        }

        // üîπ Redirige correctamente a `/flights/search/resultados`
        window.location.href = `/flights/search/resultados?origin=${origin}&destination=${destination}&date=${date}`;
    }
</script>


</body>
</html>
