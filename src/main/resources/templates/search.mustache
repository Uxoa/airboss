<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Flights - Calendar</title>
    <link rel="stylesheet" href="/css/styles.css">
    <!-- Flatpickr CSS -->
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/airbnb.css" rel="stylesheet">
</head>
<body>
<header>
    <a href="/" class="logo-link">
        <div class="logo-img">
            <img src="/images/logo01.png" alt="AirBoss Logo">
        </div>
        <span class="logo-text">AirBoss</span>
    </a>
    <nav>
        <a href="/dashboard" class="nav-link">Dashboard</a>
        <a href="/perfil" class="nav-link">My Profile</a>
        <a href="/logout" class="nav-link">Logout</a>
    </nav>
</header>

<main class="search-container">
    <h1>Search Flights</h1>

    <!-- Formulario de b√∫squeda -->
    <form id="searchForm">
        <!-- Origen -->
        <div class="form-group">
            <label for="from">From:</label>
            <select id="from" name="from" required>
                <option value="" disabled selected>Select your origin</option>
            </select>
        </div>

        <!-- Destino -->
        <div class="form-group">
            <label for="to">To:</label>
            <select id="to" name="to" required>
                <option value="" disabled selected>Select your destination</option>
            </select>
        </div>

        <!-- Fecha de salida -->
        <div class="form-group">
            <label for="calendar">Select Date:</label>
            <input id="calendar" type="text" name="date" placeholder="Pick a date" required>
        </div>

        <!-- Bot√≥n para buscar vuelos -->
        <button type="button" onclick="searchFlights()" class="btn btn-primary">Search Flights</button>
    </form>

    <!-- Contenedor de resultados -->
    <div id="results" class="results-container"></div>
</main>

<footer>
    <p>&copy; 2025 AirBoss. All rights reserved.</p>
</footer>

<!-- Flatpickr JS -->
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/es.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        // ‚úÖ Configurar Flatpickr con fecha m√≠nima hoy
        flatpickr("#calendar", {
            altInput: true,
            altFormat: "F j, Y",
            dateFormat: "Y-m-d", // Formato enviado al backend
            locale: "es", // Idioma en espa√±ol
            minDate: "today" // üìå Evita seleccionar fechas anteriores a hoy
        });

        // ‚úÖ Cargar aeropuertos desde el backend
        fetch('/api/airports/allAirports')
                .then(response => {
                    if (!response.ok) throw new Error('Error fetching airports');
                    return response.json();
                })
                .then(airports => {
                    const fromDropdown = document.getElementById('from');
                    const toDropdown = document.getElementById('to');
                    fromDropdown.innerHTML = '<option value="" disabled selected>Select your origin</option>';
                    toDropdown.innerHTML = '<option value="" disabled selected>Select your destination</option>';
                    airports.forEach(airport => {
                        const option = `<option value="${airport.iataCode}">${airport.name}</option>`;
                        fromDropdown.insertAdjacentHTML('beforeend', option);
                        toDropdown.insertAdjacentHTML('beforeend', option);
                    });
                })
                .catch(error => console.error('‚ùå Error loading airports:', error));

        // ‚úÖ Cargar fechas disponibles desde el backend
        fetch('/api/flights/available-dates')
                .then(response => {
                    if (!response.ok) throw new Error('Error fetching available dates');
                    return response.json();
                })
                .then(flightDates => {
                    flatpickr("#calendar", {
                        enable: flightDates, // Solo habilita fechas disponibles
                        dateFormat: "Y-m-d",
                        minDate: "today" // üìå Evita seleccionar fechas pasadas
                    });
                })
                .catch(error => console.error('‚ùå Error loading dates:', error));
    });

    // ‚úÖ Buscar vuelos din√°micamente
    async function searchFlights() {
        const origin = document.getElementById('from').value;
        const destination = document.getElementById('to').value;
        const date = document.getElementById('calendar').value;

        if (!origin || !destination || !date) {
            alert('‚ö†Ô∏è Please fill in all fields.');
            return;
        }

        try {
            const response = await fetch(`/api/flights/search?origin=${origin}&destination=${destination}&date=${date}`);
            if (!response.ok) throw new Error('No flights found.');

            const flights = await response.json();
            displayFlights(flights);
        } catch (error) {
            console.error('‚ùå Error fetching flights:', error);
            alert('‚ö†Ô∏è Error fetching flights. Please try again.');
        }
    }

    // ‚úÖ Mostrar vuelos en la p√°gina
    function displayFlights(flights) {
        const resultsContainer = document.getElementById('results');
        resultsContainer.innerHTML = ""; // Limpiar resultados anteriores

        if (flights.length === 0) {
            resultsContainer.innerHTML = "<p>No flights found for the selected criteria.</p>";
            return;
        }

        flights.forEach(flight => {
            const flightElement = document.createElement('div');
            flightElement.className = 'flight';
            flightElement.innerHTML = `
                <h2>Flight Number: ${flight.flightId}</h2>
                <p><strong>From:</strong> ${flight.origin} | <strong>To:</strong> ${flight.destination}</p>
                <p><strong>Departure:</strong> ${flight.departureTime}</p>
                <p><strong>Available Seats:</strong> ${flight.availableSeats}</p>
                <button class="btn btn-secondary" onclick="alert('Booking flight ID: ${flight.flightId}')">Book Now</button>
            `;
            resultsContainer.appendChild(flightElement);
        });
    }
</script>

</body>
</html>
