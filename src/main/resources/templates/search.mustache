<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Flights - Calendar</title>
    <link rel="stylesheet" href="/css/styles.css">
    <!-- Flatpickr CSS -->
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/airbnb.css" rel="stylesheet">
</head>
<body>
<header>
    <div class="logo">
        <img src="/images/logo01.png" alt="AirBoss Logo" style="height: 40px;">
        <span style="font-size: 24px; font-weight: bold;">AirBoss</span>
    </div>
    <nav>
        <a href="/dashboard" class="nav-link">Dashboard</a>
        <a href="/perfil" class="nav-link">My Profile</a>
        <a href="/logout" class="nav-link">Logout</a>
    </nav>
</header>

<main class="search-container">
    <h1>Search Flights</h1>

    <!-- Formulario de búsqueda -->
    <form action="/api/flights/search/resultados" method="get">
        <!-- Origen -->
        <div class="form-group">
            <label for="from">From:</label>
            <select id="from" name="origin" required>
                <option value="" disabled selected>Select your origin</option>
            </select>
        </div>

        <!-- Destino -->
        <div class="form-group">
            <label for="to">To:</label>
            <select id="to" name="destination" required>
                <option value="" disabled selected>Select your destination</option>
            </select>
        </div>

        <!-- Fecha de salida -->
        <div class="form-group">
            <label for="calendar">Select Date:</label>
            <input id="calendar" type="text" name="date" placeholder="Pick a date" required>
        </div>

        <!-- Botón para buscar vuelos -->
        <button type="submit" class="btn btn-primary">Search Flights</button>
    </form>
</main>

<footer>
    <p>&copy; 2025 AirBoss. All rights reserved.</p>
</footer>

<!-- Flatpickr JS -->
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/es.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Cargar aeropuertos desde el backend
        fetch('/api/airports/allAirports')
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Error fetching airports');
                    }
                    return response.json();
                })
                .then(airports => {
                    const fromDropdown = document.getElementById('from');
                    const toDropdown = document.getElementById('to');
                    fromDropdown.innerHTML = '<option value="" disabled selected>Select your origin</option>';
                    toDropdown.innerHTML = '<option value="" disabled selected>Select your destination</option>';
                    airports.forEach(airport => {
                        const option = `<option value="${airport.iataCode}">${airport.name}</option>`;
                        fromDropdown.insertAdjacentHTML('beforeend', option);
                        toDropdown.insertAdjacentHTML('beforeend', option);
                    });
                })
                .catch(error => console.error('Error loading airports:', error));

        // Cargar fechas disponibles
        fetch('/api/flights/available-dates')
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Error fetching available dates');
                    }
                    return response.json();
                })
                .then(flightDates => {
                    flatpickr("#calendar", {
                        enable: flightDates,
                        dateFormat: "Y-m-d"
                    });
                })
                .catch(error => console.error('Error loading dates:', error));
    });
</script>

</body>
</html>
